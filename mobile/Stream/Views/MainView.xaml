<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stream.Views.MainView"
             xmlns:viewmodels="clr-namespace:Stream.ViewModels"
             Title="Főoldal">
    <ContentPage.BindingContext>
        <viewmodels:MainViewModel/>
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <Button Command="{Binding ShowVideos}" Text="Listázás"/>
        <CollectionView ItemsSource="{Binding Videos}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame HasShadow="True" CornerRadius="10" Padding="10" BorderColor="Gray">
                        <StackLayout Orientation="Vertical" HorizontalOptions="Center">
                            <!--<Frame HeightRequest="90" WidthRequest="150">
                                <Image Source="http://192.168.0.129/public/thumbnails/2021-12-29-1017-55_thumb.jpg"  Aspect="AspectFill"/>
                                
                            </Frame>-->
                            <Label Text="{Binding Filename}" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                            <Button Text="Megnézem!" Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}},
                                    Path=BindingContext.NavigateToStreamPage }" CommandParameter="{Binding Filename}" HorizontalOptions="Center" WidthRequest="100"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>